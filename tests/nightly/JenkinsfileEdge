// This Jenkinsfile is to run jobs on the physical Edge Lab in Berlin

armv7_wheel = 'build/mxnet-*-py2.py3-none-any.whl'

node('mxnetlinux-cpu') {
  // Loading the utilities requires a node context unfortunately
  checkout scm
  utils = load('ci/Jenkinsfile_utils.groovy')
}
utils.assign_node_labels(linux_cpu: 'mxnetlinux-cpu', linux_gpu: 'mxnetlinux-gpu', linux_gpu_p3: 'mxnetlinux-gpu-p3', windows_cpu: 'mxnetwindows-cpu', windows_gpu: 'mxnetwindows-gpu', raspberry_pi_3: 'raspberry-pi-3')

utils.main_wrapper(
core_logic: {
  stage('Build') {
    parallel 'ARMv7': {
      node(NODE_LINUX_CPU) {
        ws('workspace/build-armv7') {
          utils.init_git()
          utils.docker_run('armv7', 'build_armv7', false)
          utils.pack_lib('armv7', armv7_wheel)
        }
      }
    }
  }

  stage('Tests'){
    parallel 'Raspberry Pi 3 - Python 3': {
      node(NODE_RASPBERRY_PI_3) {
        ws('workspace/tests_raspberry_pi_3') {
          utils.init_git()
          utils.unpack_and_init('armv7', armv7_wheel)
          utils.docker_run('armv7_raspberry_pi_3', 'raspberry_test_python_3', false)
        }
      }
    }
  }
}
,
failure_handler: {
  if (currentBuild.result == "FAILURE") {
    emailext body: 'Nightly tests for MXNet branch ${BRANCH_NAME} failed. Please view the build at ${BUILD_URL}', replyTo: '${EMAIL}', subject: '[NIGHTLY TEST FAILED] build ${BUILD_NUMBER}', to: '${EMAIL}'
  }
}
)
